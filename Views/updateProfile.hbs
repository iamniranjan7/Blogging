                            <form class="form-inline my-2 my-lg-0" id="searchForm"> 
                                <input class="form-control mr-sm-2" type="search" placeholder="Search username" aria-label="Search" id="searched">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="search">Search</button>
                            </form>
                        </div>
                    </nav>
                    <h1>Update your profile</h1><br>
                  
                        <form id="myForm">
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Change Username</label>
                                <input type="text" class="form-control" id="updateName" placeholder="Username here">
                                </div>
                                <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">New bio</label>
                                <textarea class="form-control" rows="3" id="updateBio"></textarea>
                                </div>
                                <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Profile image</label><br>
                                <input type="file"  id="ppi"></textarea>
                                </div>
                                <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label" >Background image</label><br>
                                <input type="file" id="bgi"></textarea>
