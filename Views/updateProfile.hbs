                        <div>
                                                   <h5>Update password</h5><br>

                            <form id="passwordForm">
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Current password</label>
                                <input type="password" class="form-control" id="pwd" placeholder="Password">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">New password</label>
                                <input type="password" class="form-control" id="npwd" placeholder="Password">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Confirm new password</label>
                                <input type="password" class="form-control" id="cnpwd" placeholder="Password">
                            </div>
                              <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-outline-secondary">Update password</button>
                        </div>
                        </form>
                        <h4 id="mpsghre" style="display: none;">Loading...</h4>
                        <h4 id="pmsg"></h4>



                        </div>
                         


            </div>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script>
     const logout = () => {
        fetch("/api/v1/auth/signout");
    }

    const myPosts = () =>{
        console.log("this are my posts");
        window.location.href = `http://localhost:8000/my-posts`;
    }

    document.getElementById("searchForm").addEventListener("submit", e => {
    
        e.preventDefault();
        let searched = document.getElementById("searched").value;
        let url = `http://localhost:8000/search-user/${searched.trim()}`;

        if(searched.trim().length){
            window.open(url,'_blank');
        }
    });


    document.getElementById("passwordForm").addEventListener("submit",e =>{
        e.preventDefault();
        document.getElementById("mpsghre").style.display = "block";
        //pwd npwd cnpwd
        const pwd = document.getElementById("pwd").value;
        const npwd = document.getElementById("npwd").value;
        const cnpwd = document.getElementById("cnpwd").value;
        
        
        fetch("/user/updatePassword",{
            method:"PATCH",
            headers:{
                "Content-Type":"application/json"
            },
            body: JSON.stringify({ password:pwd, newPassword:npwd, confirmNewPassword:cnpwd })
        })
        .then(res => res.json())
        .then(res =>{
            document.getElementById("pmsg").innerText = res.message;
        })
        .catch(err => console.error(err))
        .finally(() =>{
            document.getElementById("mpsghre").style.display = "none";
            document.getElementById("pwd").value = "";
            document.getElementById("npwd").value = "";
            document.getElementById("cnpwd").value = "";
        })

    })


   const loadProfile = () =>{
     fetch("/user/profile")
    .then(res => res.json())
    .then(res => {
       // name,bio,imgsr
       const profile = res.result.profile;
       if(profile.email){
         document.getElementById("logins").innerHTML = 
         `<a href="/main" class="card-link" onclick="logout()">logout</a>`;
       }else{
        //document.getElementById("loginBtn").style.display = "inline-block";
        document.getElementById("logins").innerHTML = 
        `<a href="/login" class="card-link" id="loginBtn">Login</a>`;
       }
       //document.getElementById("blogs").innerText = `Blogs ${profile.blog_count}`;
       document.getElementById("name").innerText = profile.username;
       document.getElementById("bio").innerText = profile.bio;
       const img = profile.profilePicture ? profile.profilePicture : "Public/img/users/default.jpg";
       document.getElementById("imgsr").src = img;
    })
    .catch(err => console.error(err));
   }


    //ppi,bgi,updateBio,updateName
    //{ username, profilePicture, backgroundPicture, bio, birthdate }

    document.getElementById("myForm").addEventListener("submit",e=>{
        document.getElementById("msghre").style.display = "block";
        document.getElementById("msg").innerText = "";

        e.preventDefault();
        const ppi = document.getElementById("ppi").files[0];
        const bgi = document.getElementById("bgi").files[0];
        const name = document.getElementById("updateName").value;
        const bio = document.getElementById("updateBio").value;
        const formData = new FormData();
        formData.append("username",name);
        formData.append("bio",bio);

        if(ppi){
            formData.append("profilePicture",ppi);
        }
        if(bgi){
            formData.append("backgroundPicture",bgi);
        }

        fetch("/user/updateProfile",{
            method:"PATCH",
            body:formData
        })
        .then(res => res.json())
        .then(res => {
            document.getElementById("msg").innerText = res.message;
        })
        .catch(err => console.error(err))
        .finally(()=>{
            document.getElementById("msghre").style.display = "none";
            document.getElementById("updateName").value = "";
            document.getElementById("updateBio").value = "";
            document.getElementById("ppi").value = "";
            document.getElementById("bgi").value = "";
            setTimeout(()=>{
                document.getElementById("msg").innerText = "";
            },2000);
            loadProfile();

        })

        //console.log(name,bio);
        
        
    })


    

/**/
 
loadProfile();

</script>
</body>
